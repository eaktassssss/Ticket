@using Ticket.Dtos.Customers
@model CustomerDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .text-danger {
        font-size: 10px;
        font-weight: bold;
        color: red
    }
</style>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Müşteri Bilgileri Düzenle</h3>
                </div>
                <form role="form" asp-action="Update" asp-controller="Customer">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <input type="hidden" asp-for="@Model.EffortApproval" id="approvalid" value="@Model.EffortApproval" />
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Firma İsmi</label>
                                    <input asp-for="Title" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Gsm</label>
                                    <input asp-for="Gsm" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Gsm" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="Email" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Birincil İletişim Kişisi</label>
                                    <input asp-for="PrimaryContactUserNameSurname" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="PrimaryContactUserNameSurname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Birincil İletişim Email</label>
                                    <input asp-for="PrimaryContactUserEmail" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="PrimaryContactUserEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Efor Onay Limit</label>
                                    <select id="approval" asp-for="EffortApprovalTemporary" class="form-control">
                                        <option value="1">İsyeniyor</option>
                                        <option value="0">İstenmiyor</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Efor  Onay Limiti</label>
                                    <input asp-for="EffortApprovalLimit" onkeypress="return isNumberKey(event)" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="EffortApprovalLimit" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button><a href="@Url.Action("Create","Customer")">  <button type="button" class="btn btn-primary">Geri Dön</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="~/js/jquery.min.js"></script>
 
<script src="~/content/custom/js/customersupdate.js"></script>
