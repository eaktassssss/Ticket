@using Ticket.Dtos.Elastic
@model ElasticDto
@{
    ViewData["Title"] = "CreateIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-danger {
        font-size: 10px;
        font-weight: bold;
        color: red
    }
</style>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Yetki Bilgileri</h3>
                </div>
                <form role="form" asp-action="CreateIndex" asp-controller="Elastic">
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="box">
            <div class="box-header">
                <h3 class="box-title">Yetki Listesi</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Index İsmi</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        <tr>
                            <td>IndexName</td>
                            <td>CreatedDate</td>
                            <td>Operation</td>
                             
                        </tr>
                         
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Index İsmi</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
</section>
<script src="~/js/jquery.min.js"></script>
<script src="~/content/custom/js/users.js"></script>

