@using Ticket.Dtos.Roles
@model RoleDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .text-danger {
        font-size: 10px;
        font-weight: bold;
        color: red
    }
</style>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Yetki Bilgileri</h3>
                </div>
                <form role="form" asp-action="Create" asp-controller="Role">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Yetki</label>
                                    <input asp-for="Name" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Yetki Listesi</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Yetki</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Roles)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreatedDate</td>
                            <td align="center">
                                <a href="@Url.Action("Update","Role",new { id=item.Id})">
                                    <button class="btn btn-primary">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>
                                &nbsp; &nbsp;
                                <button id="deleteRole" class="btn btn-danger" data-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Yetki</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>
<script src="~/js/jquery.min.js"></script>
<script src="~/content/custom/js/users.js"></script>
